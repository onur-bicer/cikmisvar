generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  name      String?
  email     String    @unique
  password  String
  role      String    @default("user") // "user" or "admin"
  avatar    String?
  createdAt DateTime  @default(now())
  favorites Favorite[]
  uploads   File[]
  comments  Comment[]
  searches  SearchHistory[]
}

model University {
  id          String       @id @default(cuid())
  name        String       @unique
  city        String?
  departments Department[]
  files       File[]
}

model Department {
  id           String     @id @default(cuid())
  name         String
  universityId String
  university   University @relation(fields: [universityId], references: [id])
  courses      Course[]
  files        File[]

  @@unique([name, universityId])
}

model Course {
  id           String     @id @default(cuid())
  name         String
  departmentId String
  department   Department @relation(fields: [departmentId], references: [id])
  files        File[]

  @@unique([name, departmentId])
}

model File {
  id             String     @id @default(cuid())
  universityId   String
  university     University @relation(fields: [universityId], references: [id])
  departmentId   String
  department     Department @relation(fields: [departmentId], references: [id])
  courseId       String
  course         Course     @relation(fields: [courseId], references: [id])
  year           Int
  examType       String     // MIDTERM, FINAL, QUIZ, MAKEUP
  filePath       String
  fileSize       Int
  views          Int        @default(0)
  uploaderId     String
  uploader       User       @relation(fields: [uploaderId], references: [id])
  status         String     @default("pending") // pending, approved
  createdAt      DateTime   @default(now())
  favorites      Favorite[]
  reports        Report[]
  comments       Comment[]
}

model Favorite {
  userId String
  user   User   @relation(fields: [userId], references: [id])
  fileId String
  file   File   @relation(fields: [fileId], references: [id], onDelete: Cascade)

  @@id([userId, fileId])
}

model Report {
  id        String   @id @default(cuid())
  fileId    String
  file      File     @relation(fields: [fileId], references: [id], onDelete: Cascade)
  reason    String
  createdAt DateTime @default(now())
}

model Comment {
  id        String   @id @default(cuid())
  text      String
  fileId    String
  file      File     @relation(fields: [fileId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model SearchHistory {
  id        String   @id @default(cuid())
  term      String
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  ipAddress String?
  createdAt DateTime @default(now())
}
